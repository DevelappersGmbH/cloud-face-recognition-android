<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
            android:id="@+id/photoView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_default"
            tools:srcCompat="@tools:sample/avatars"/>
    <TextView
            android:id="@+id/fullNameView"
            android:text="@string/full_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:autoSizeTextType="uniform"
            android:padding="@dimen/padding_default"/>

    <LinearLayout android:id="@+id/probabilityView"
                  android:text="NA"
                  android:layout_weight="2"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/text_large"
                  android:autoSizeTextType="uniform"
                  android:orientation="horizontal"
                  android:padding="@dimen/padding_default">
        <TextView
                android:id="@+id/probabilityViewMicrosoft"
                android:text="@string/microsoft"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_large"
                android:autoSizeTextType="uniform"
                android:padding="@dimen/padding_default"/>
        <TextView
                android:id="@+id/probabilityViewAmazon"
                android:text="@string/amazon"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_large"
                android:autoSizeTextType="uniform"
                android:padding="@dimen/padding_default"/>
        <TextView
                android:id="@+id/probabilityViewFace"
                android:text="@string/face"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_large"
                android:autoSizeTextType="uniform"
                android:padding="@dimen/padding_default"/>
        <TextView
                android:id="@+id/probabilityViewKairos"
                android:text="@string/kairos"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_large"
                android:autoSizeTextType="uniform"
                android:padding="@dimen/padding_default"/>
        <TextView
                android:id="@+id/probabilityViewLuxand"
                android:text="@string/luxand"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_large"
                android:autoSizeTextType="uniform"
                android:padding="@dimen/padding_default"/>
    </LinearLayout>


</LinearLayout>